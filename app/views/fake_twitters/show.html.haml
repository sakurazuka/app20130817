- model_class = FakeTwitter
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:tweet) + ':'
  %br
  = @fake_twitter.tweet

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), fake_twitters_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_fake_twitter_path(@fake_twitter), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), fake_twitter_path(@fake_twitter), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
